<%- include('../partials/header') %>



<section id="show-page">
    <div>Airport </div>
    <div><%= flight.airport %></div>
    <div>Airline </div>
    <div><%= flight.airline %></div>
    <div>Flight No: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
  <a href="/flights/<%= flight._id %>/tickets/new">
    <button>Add Ticket</button>
  </a>
  
  </section>
  <tr id="show-page">
    <% tickets.forEach(function(t) { %>
      <strong><td>Seats </td></strong> 
      <td><%= t.seat %></td>
      <strong><td>Price </td></strong>
      <td><%= t.price %></td>
      <% }) %>
  </tr>

  
  
</section>
<!-- new markup below -->
<br><br><h2>Destinations</h2>
<form id="add-destination" method="POST"
action="/flights/<%= flight._id %>/destination">
<label>Airport:
  <select name="airport">
    <option value="LAX">LAX</option>
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="SAN">SAN</option>
  </select>
</label>
<label>Arrival:
  <input type="datetime-local" name="arrival"> 
</label>
  <input type="submit" value="Add Destination">
</form>


<br>
<tr id="show-page">
  <% flight.destinations.forEach(function(f) { %>
    <br>
    <strong><td>Airport: </td></strong> 
    <td><%= f.airport %></td>
    <strong><td>Arrival: </td></strong>
    <td><%= f.arrival %></td>
    <% }) %>
</tr>
